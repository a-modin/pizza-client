body
  background #1b1b25

RobotoLight()
  font-family 'Roboto' !important
  font-weight 300 !important
    
RobotoRegular()
  font-family 'Roboto' !important
  font-weight 400 !important
  
RobotoMedium()
  font-family 'Roboto' !important
  font-weight 500 !important
  
.input
  width 100%
  height 48px
  margin-top 16px
  border none
  padding-left 16px
  box-sizing border-box
  
.button
  width 100%
  height 48px
  margin-top 48px
  padding 0
  border none
  text-transform uppercase
  cursor pointer

h1
  RobotoRegular()
  
span, li
  RobotoLight()

.input,
.button
  RobotoLight()
  font-size 16px
  padding-top 4px
  
.validation-message
  RobotoRegular()
  color red

.shadow
  box-shadow: 0 1px 5px 0 rgba(0,0,0,.2),0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.12)
